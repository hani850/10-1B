

  <%- include('header'); -%>

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      
        <div class="container-fluid bg-success-subtle mb-4">
            <div class="col-sm-8 mx-auto text-center py-4">
                <h1 class="display-6">dKin Butterfly Club</h1>
                <p class="lead">Informative web page on Butterflies from around the world</p>
            </div>
        </div>
  </head>

  <main>
    <div class="container">
      <h1 class="display-4">dKin Butterfly Club: Survey Results</h1>
      <h3>Survey form submitted successfully</h3>
      <p>Thank you <i> <%= firstname %> </i> for completing the <b>dKin Butterfly Club</b> survey. A summary of the surveys submitted so far is shown
        below:</p>
      <p class="lead ">Summary of Survey Results</p>

      <div>
      <table>
        <tr>
          <th>
            Survey Completed on:
          </th>
          <td>
            <%= SurveyCompleted %>
          </td>
        </tr>
        <tr>
          <th>First Name:</th>
          <td>
            <%= firstname %>
          </td>
        </tr>
        <tr>
          <th>Surname:</th>
          <td>
            <%= surname %>
          </td>
        </tr>
        <tr>
          <th>Email:</th>
          <td>
            <%=email %>
          </td>
        </tr>
        <tr>
          <th>Favourite Butterfly Colour:</th>
          <td>
            <%= FavouriteButterflyColour %>
          </td>
        </tr>
        <tr>
          <th>Comment:</th>
          <td>
            <%= Comment %>
          </td>
        </tr>
      </table>
      </div>

      <a href="/">Click here to return to the survey form.</a>
    </div>
  </main>


  <%- include('footer'); -%>