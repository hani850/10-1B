<%- include('header'); -%>

    <header>
        <div class="container-fluid bg-success-subtle">
            <div class="col-sm-8 mx-auto text-center py-4">
                <h1 class="display-6">dKin Butterfly Club</h1>
                <p class="lead">Informative web page on Butterflies from around the world</p>
            </div>
        </div>
    </header>

    <main>
        <div class="container-fluid bg-secondary p-2 mb-4">
            <div class="container">
                <ul class="nav nav-pills nav-fill ">
                    <li class="nav-item">
                        <a class="nav-link active text-light" href="#">Feedback</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-light" href="/surveys">Survey List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/summary">Summary</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="container">



            <h3 class="mt-3">dKin Butterfly Club: Survey</h3>

            <p>
                We are always looking for feedback from our <strong>dKin Butterfly Club</strong> community.
                Please take a moment to complete this <em>web-based form</em>
                below to provide us with recent butterfly experiences.
            </p>

            <h5>Survey Form</h5>
            <p>
                Please complete the form below to provide the <strong>dKin Butterfly Club</strong> with your thoughts:
            </p>

            <div id="formContainer">

                <form action="/submitsurvey" method="post" id="postSurveyForm">
                    <div class="row mb-3">
                        <label for="inputFirstname" class="col-sm-3 pt-2 col-form-label-sm text-sm-end">
                            Firstname:
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputFirstname" name="firstname"
                                title="Provide your First name" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputSurname" class="col-sm-3 pt-2 col-form-label-sm text-sm-end">
                            Surname:
                        </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputSurname" name="surname"
                                title="Provide Surname" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-3 pt-2 col-form-label-sm text-sm-end">
                            Email:
                        </label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control" id="inputEmail" name="email"
                                title="Provide your email xxxx@xxxx.xxx" autocomplete="off" required>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-3 col-form-label-sm text-sm-end" for="q1-radio-1">
                            <strong>Q1</strong> Membership registration was simple
                        </label>
                        <div class="col-sm-9">
                            <div class="btn-group btn-group-sm d-flex flex-wrap" role="group"
                                aria-label="Q1 Likert button group">
                                <input type="radio" class="btn-check form-check-input" name="q1radio" id="q1-radio-1"
                                    value="1" required>
                                <label class="btn btn-outline-secondary" for="q1-radio-1"
                                    title="Strongly Disagree">Strongly Disagree</label>
                                <input type="radio" class="btn-check form-check-input" name="q1radio" id="q1-radio-2"
                                    value="2" required>
                                <label class="btn btn-outline-secondary" for="q1-radio-2"
                                    title="Disagree">Disagree</label>
                                <input type="radio" class="btn-check form-check-input" name="q1radio" id="q1-radio-3"
                                    value="3" required>
                                <label class="btn btn-outline-secondary" for="q1-radio-3"
                                    title="Neutral">Neutral</label>
                                <input type="radio" class="btn-check form-check-input" name="q1radio" id="q1-radio-4"
                                    value="4" required>
                                <label class="btn btn-outline-secondary" for="q1-radio-4" title="Agree">Agree</label>
                                <input type="radio" class="btn-check form-check-input" name="q1radio" id="q1-radio-5"
                                    value="5" required>
                                <label class="btn btn-outline-secondary" for="q1-radio-5"
                                    title="Strongly Agree">Strongly Agree</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-3 col-form-label-sm text-sm-end" for="q2-radio-1">
                            <strong>Q2</strong> Staff were polite and friendly
                        </label>
                        <div class="col-sm-9">
                            <div class="btn-group btn-group-sm d-flex flex-wrap" role="group"
                                aria-label="Q2 Likert button group">
                                <input type="radio" class="btn-check form-check-input" name="q2radio" id="q2-radio-1"
                                    value="1" required>
                                <label class="btn btn-outline-secondary" for="q2-radio-1"
                                    title="Strongly Disagree">Strongly Disagree</label>
                                <input type="radio" class="btn-check form-check-input" name="q2radio" id="q2-radio-2"
                                    value="2" required>
                                <label class="btn btn-outline-secondary" for="q2-radio-2"
                                    title="Disagree">Disagree</label>
                                <input type="radio" class="btn-check form-check-input" name="q2radio" id="q2-radio-3"
                                    value="3" required>
                                <label class="btn btn-outline-secondary" for="q2-radio-3"
                                    title="Neutral">Neutral</label>
                                <input type="radio" class="btn-check form-check-input" name="q2radio" id="q2-radio-4"
                                    value="4" required>
                                <label class="btn btn-outline-secondary" for="q2-radio-4" title="Agree">Agree</label>
                                <input type="radio" class="btn-check form-check-input" name="q2radio" id="q2-radio-5"
                                    value="5" required>
                                <label class="btn btn-outline-secondary" for="q2-radio-5"
                                    title="Strongly Agree">Strongly Agree</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label class="col-sm-3 col-form-label-sm text-sm-end" for="q3-radio-1">
                            <strong>Q3</strong> I would recommend the club to others
                        </label>
                        <div class="col-sm-9">
                            <div class="btn-group btn-group-sm d-flex flex-wrap" role="group"
                                aria-label="Q3 Likert button group">
                                <input type="radio" class="btn-check form-check-input" name="q3radio" id="q3-radio-1"
                                    value="1" required>
                                <label class="btn btn-outline-secondary" for="q3-radio-1"
                                    title="Strongly Disagree">Strongly Disagree</label>
                                <input type="radio" class="btn-check form-check-input" name="q3radio" id="q3-radio-2"
                                    value="2" required>
                                <label class="btn btn-outline-secondary" for="q3-radio-2"
                                    title="Disagree">Disagree</label>
                                <input type="radio" class="btn-check form-check-input" name="q3radio" id="q3-radio-3"
                                    value="3" required>
                                <label class="btn btn-outline-secondary" for="q3-radio-3"
                                    title="Neutral">Neutral</label>
                                <input type="radio" class="btn-check form-check-input" name="q3radio" id="q3-radio-4"
                                    value="4" required>
                                <label class="btn btn-outline-secondary" for="q3-radio-4" title="Agree">Agree</label>
                                <input type="radio" class="btn-check form-check-input" name="q3radio" id="q3-radio-5"
                                    value="5" required>
                                <label class="btn btn-outline-secondary" for="q3-radio-5"
                                    title="Strongly Agree">Strongly Agree</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label class="col-form-label-sm col-sm-3 pt-0 text-sm-end" for="butterflyColour">
                            The colour of your favourite butterfly:
                        </label>
                        <div class="col-sm-9">
                            <input type="color" class="form-control form-control-color w-25" id="butterflyColour"
                                name="butterflyColour" value="#A63F94" title="Choose your color" required
                                aria-label="Butterfly colour selector">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-3 col-form-label-sm text-sm-end" for="comments">Comments:</label>
                        <div class="col-sm-9">
                            <textarea rows="3" class="form-control" id="comments" name="comments"
                                placeholder="Please provide a few words to describe your favourite butterfly memory..."
                                required></textarea>
                        </div>
                    </div>


                    <div class="row mt-4">
                        <div class="col-sm mx-auto d-flex justify-content-center ">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <div class="col-sm mx-auto d-flex justify-content-center">
                            <button type="reset" class="btn btn-primary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('footer'); -%>